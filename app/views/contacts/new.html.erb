<%= simple_form_for @contact do |f| %>
  <%= f.input :name, label: 'Your name please', error: 'Username is mandatory, please specify one' %>
  <%= f.input :email, placeholder: 'heysean@gmail.com' %>
  <%= f.input :message, :as => :text, :input_html => { 'rows' => 5, 'cols' => 10 } %>
  <%= f.button :submit, 'Send me a whatsup :)', class: 'btn btn-primary' %>

<% end %>